MAINSUM = "7b24e00d9f884524f0c40bb61d76956ad7a98414c4f83978941a896e584f43c0"

do_install() {
    install -d ${D}${bindir}
    install -m 0755 ${S}/usr/bin/tegrastats ${D}${bindir}/
