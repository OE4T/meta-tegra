export CUDA_VERSION="@CUDA_VERSION@"
PATH="${PATH}:$OECORE_NATIVE_SYSROOT/usr/local/cuda-$CUDA_VERSION/bin"
export CUDA_TOOLKIT_ROOT="$OECORE_NATIVE_SYSROOT/usr/local/cuda-$CUDA_VERSION"
export CUDA_CXXFLAGS="-I$CUDA_TOOLKIT_ROOT/include -I=/usr/local/cuda-$CUDA_VERSION/include"
export CUDA_LDFLAGS="-L=/usr/local/cuda-$CUDA_VERSION/$OECORE_BASELIB -L=/usr/local/cuda-$CUDA_VERSION/$OECORE_BASELIB/stubs -Wl,-rpath-link=$OECORE_TARGET_SYSROOT/usr/local/cuda-$CUDA_VERSION/$OECORE_BASELIB -Wl,-rpath=/usr/local/cuda-$CUDA_VERSION/$OECORE_BASELIB"
export CUDA_NVCC_PATH_FLAGS="--include-path $OECORE_TARGET_SYSROOT/usr/local/cuda-$CUDA_VERSION/include --library-path $OECORE_TARGET_SYSROOT/usr/local/cuda-$CUDA_VERSION/$OECORE_BASELIB"
export NVCCFLAGS="$CUDA_NVCC_ARCH_FLAGS $CUDA_NVCC_PATH_FLAGS"
LDFLAGS="--sysroot=$OECORE_TARGET_SYSROOT $LDFLAGS"
export CUDAFLAGS="$CUDA_NVCC_ARCH_FLAGS $CUDA_NVCC_PATH_FLAGS -Xcompiler --sysroot=$OECORE_TARGET_SYSROOT $CUDACXXARCHFLAGS"
export CUDA_NVCC_EXECUTABLE="$CUDA_TOOLKIT_ROOT/bin/nvcc"
export CUDA_PATH="$OECORE_TARGET_SYSROOT/usr/local/cuda-$CUDA_VERSION"
