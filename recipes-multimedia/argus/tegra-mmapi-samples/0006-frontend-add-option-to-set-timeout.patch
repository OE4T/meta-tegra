From bfc672e348fec711d9ba9b568ef1e275aaf06ba5 Mon Sep 17 00:00:00 2001
From: Ilies CHERGUI <ichergui@nvidia.com>
Date: Mon, 8 Sep 2025 10:04:48 +0100
Subject: [PATCH 6/8] frontend: add option to set timeout

instead of requiring a human to type 'q' to quit,
to allow the sample to be used as an automated test.

Upstream-Status: Inappropriate [OE-specific]
Signed-off-by: Matt Madison <matt@madison.systems>
---
 samples/17_frontend/main.cpp | 15 ++++++++++++---
 1 file changed, 12 insertions(+), 3 deletions(-)

diff --git a/samples/17_frontend/main.cpp b/samples/17_frontend/main.cpp
index dc86696..6f61db9 100644
--- a/samples/17_frontend/main.cpp
+++ b/samples/17_frontend/main.cpp
@@ -29,6 +29,7 @@
  */
 
 #include <stdio.h>
+#include <unistd.h>
 #include <getopt.h>
 #include <sys/sysinfo.h>
 #include <termios.h>
@@ -59,6 +60,7 @@ static const unsigned   MAX_STREAM  = 4;
 // Configurations which can be overrided by cmdline
 static std::string g_engineFile("resnet10_dynamic_batch.engine");
 static bool g_bNoPreview = false;
+static int g_timeOutSec = 0;
 
 // Globals.
 static NvEglRenderer *g_eglRenderer = NULL;
@@ -155,8 +157,11 @@ runArgusProducer(const std::vector<StreamConsumer*> &consumers)
     if (iCaptureSession->repeat(request.get()) != STATUS_OK)
         ORIGINATE_ERROR("Failed to start repeat capture request");
 
-    // Wait until user press 'q'.
-    while (getchar() != 'q');
+    if (g_timeOutSec > 0)
+        sleep((unsigned int) g_timeOutSec);
+    else
+        // Wait until user press 'q'.
+        while (getchar() != 'q');
 
     // Stop the repeating request and wait for idle.
     iCaptureSession->stopRepeat();
@@ -230,6 +235,7 @@ static void printHelp()
            "  --no-preview          Disables the renderer\n"
            "  -s                    Enable profiling\n"
            "  -v                    Enable verbose message\n"
+           "  -t <seconds>          Timed run instead of interactive\n"
            "Commands\n"
            "  q:        exit\n");
 }
@@ -250,7 +256,7 @@ static bool parseCmdline(int argc, char **argv)
     };
 
     int c;
-    while ((c = getopt_long(argc, argv, "s::v::h", longOptions, NULL)) != -1)
+    while ((c = getopt_long(argc, argv, "s::v::t:h", longOptions, NULL)) != -1)
     {
         switch (c)
         {
@@ -263,6 +269,9 @@ static bool parseCmdline(int argc, char **argv)
             case 's':
                 g_bProfiling = true;
                 break;
+            case 't':
+                g_timeOutSec = atoi(optarg);
+                break;
             case 'v':
                 g_bVerbose = true;
                 break;
