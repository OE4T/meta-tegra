 ##### Private rules #####
 
@@ -38,7 +39,7 @@ $(SRCS_DIR)/.download_stamp:
 	$(PATCH) -d $(SRCS_DIR) -p1 < $(PATCH_FILE)
 	@touch $@
 
-$(LIB_SRCS): $(SRCS_DIR)/.download_stamp
+$(LIB_SRCS): | $(SRCS_DIR)/.download_stamp
 
 ##### Public rules #####
 
